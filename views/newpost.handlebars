<body>
  
<div class="container">
  <form role="form">
  <div class="form-group">
    <label for="title-input">Item Name/Title</label>
    <input type="email" class="form-control" id="title-input">
  </div>

  <div class="form-group">
    <label for="tags-input">Tags</label>
    <input type="email" class="form-control" id="tags-input" placeholder="i.e. #bed, #chemistry, #pickuponly, etc.">
  </div>

  <div class="row">
    <div class="col-xs-4">
      <div class="checkbox">
        <label><input type="checkbox"> Buy</label>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="checkbox">
        <label><input type="checkbox"> Sell</label>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="checkbox">
        <label><input type="checkbox"> Free</label>
      </div>
    </div>
  </div>

  <h4>Condition</h4>
  <div class="row">
    <div class="col-xs-6">
      <div class="checkbox">
        <label><input type="checkbox"> New</label>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="checkbox">
        <label><input type="checkbox"> Used</label>
      </div>
    </div>
  </div>
    
 

  <h4>Price</h4>
  <div class="row">
    <div class="col-xs-7">
      <div class="form-group">
        <label for="title-input">Price $</label>
        <input type="email" class="form-control" id="title-input">
      </div>
    </div>
    <div class="col-xs-5" style="margin-top: 20px">
      <div class="checkbox">
        <label><input type="checkbox"> OBO</label>
      </div>
    </div>
  </div>




  <div class="form-group">
    <label for="exampleInputFile">Image</label>
    <input type="file" id="exampleInputFile">
  </div>
  
  <div class="form-group">
    <label for="description-input">Description</label>
    <textarea class="form-control" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>

</body>
